<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark {{ app.session.flashbag.peek('success')|length > 0 ? 'mb-0' : '' }}" aria-label="Tenth navbar example">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample08" aria-controls="navbarsExample08" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-md-center" id="navbarsExample08">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('app_home') }}">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_product')}}">Produits</a>
                    </li>
                    <li class="nav-item dropdown">
                        <span class="nav-link dropdown-toggle" id="dropdown08" data-bs-toggle="dropdown" aria-expanded="false">Catégories</span>
                        <ul class="dropdown-menu" aria-labelledby="dropdown08">
                            {% for category in categories %}
                                <li><a class="dropdown-item" href="{{ path('app_category', {id: category.id}) }}">{{ category.name }}</a></li>  
                            {% endfor %}
                        </ul>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item dropdown">
                            <span class="nav-link dropdown-toggle" id="dropdown08" data-bs-toggle="dropdown" aria-expanded="false">Administration</span>
                            <ul class="dropdown-menu" aria-labelledby="dropdown08">
                                <li><a class="dropdown-item" href="{{ path('new_category') }}">Nouvelle catégorie</a></li>
                                <li><a class="dropdown-item" href="{{ path('app_product_new') }}">Nouveau produit</a></li>
                                <li><a class="dropdown-item" href="{{ path('category_list') }}">Gérer les catégories</a></li>
                                <li><a class="dropdown-item" href="{{ path('app_product_management') }}">Gérer les produits</a></li>
                                <li><a class="dropdown-item" href="{{ path('app_order') }}">Gérer les commandes</a></li>     
                            </ul>
                        </li>
                    {% endif %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_basket') }}">Panier</a>
                    </li>
                </ul>
                <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                    {% if is_granted('ROLE_USER') %} <span class="me-5" style="color: white">Bonjour {{ app.user.name }}</span> {% endif %}
                    <div class="btn-group dropstart">
                        <span class="nav-link" id="dropdown08" data-bs-toggle="dropdown" aria-expanded="false"> <i class="fa-solid fa-user user-icon"></i></span>
                        <ul class="dropdown-menu">
                            {% if is_granted('ROLE_USER') %}
                                <li><a href="{{ path('app_logout') }}" class="dropdown-item"><i class="fas fa-sign-out-alt"></i> Se déconnecter</a></li>
                            {% else %}
                                <li><a href="{{ path('app_login') }}" class="dropdown-item"><i class="fas fa-sign-in-alt"></i> Se connecter/S'inscrire</a></li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
  </nav>
</header>