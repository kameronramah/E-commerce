{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="register">
        <div class="card">
            <div class="text-center">
                <h3>Créer votre compte</h3> <span class="abt">Si vous avez déjà votre compte, <a href="{{path('app_login')}}">Connectez-vous</a></span>
            </div>
            {{ form_start(registrationForm) }}

                <div class="inputbox">
                    {{ form_row(registrationForm.name)  }}
                </div>
                <div class="inputbox">
                    {{ form_row(registrationForm.lastName) }}
                </div>
                <div class="inputbox">
                    {{ form_row(registrationForm.street) }}
                </div>

                <div class="inputbox"> 
                    {{ form_row(registrationForm.postalCode) }}
                </div>
                <div class="inputbox">
                    {{ form_row(registrationForm.city) }}
                </div>

                <div class="inputbox">                    
                    {{ form_row(registrationForm.email) }}
                </div>

                <div class="inputbox">
                    {{ form_row(registrationForm.plainPassword) }} 
                </div>
                
                <div class="form-check">
                    {{ form_row(registrationForm.agreeTerms) }}
                </div>

                <button class="btn btn-primary btn-block d-flex flex-row justify-content-between align-items-center">
                        <div class="text-right"> <span>S'inscrire</span> </div>
                        <div class="text-right"> <span><i class="fa fa-long-arrow-right align-items-center"></i></span> </div>
                </button> 

                
            {{ form_end(registrationForm) }}
        </div>
    </div>
        
{% endblock %}
